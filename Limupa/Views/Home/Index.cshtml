@inject Limupa.Helpers.BannerService bannerService;
@{
    List<Banner> banners = await bannerService.GetSettingsAsync();
}
@using Limupa.ViewModel;
@model HomeViewModel;
<!-- Begin Slider With Banner Area -->
        <div class="slider-with-banner">
            <div class="container">
                <div class="row">
                    <!-- Begin Slider Area -->
                    <div class="col-lg-8 col-md-8">
                        <div class="slider-area pt-sm-30 pt-xs-30">
                            <div class="slider-active owl-carousel">
                                <!-- Begin Single Slide Area -->
                                @foreach (Slider slider in Model.Sliders)
                        {
                            <div class="single-slide align-center-left animation-style-01 bg-1">
                                <div class="bg-1" style="background-image:url(./uploads/sliders/@slider.ImageUrl)"></div>
                                    <div class="slider-progress"></div>
                                    <div class="slider-content">
                                        <h5>@slider.Description</h5>
                                        <h2>@slider.Name</h2>
                                        <h3>Starting at <span>$@slider.Price</span></h3>
                                        <div class="default-btn slide-btn">
                                            <a class="links" asp-action="shop" asp-controller="home">Shopping Now</a>
                                        </div>
                                    </div>
                                </div>
                        }
                                <!-- Single Slide Area End Here -->
                            </div>
                        </div>
                    </div>
                    <!-- Slider Area End Here -->
                    <!-- Begin Li Banner Area -->
        
                 <div class="col-lg-4 col-md-4 text-center pt-sm-30 pt-xs-30">
                        <div class="li-banner">
                            <a asp-action="shop" asp-controller="home">
                                <img src="~/uploads/banner/@banners.FirstOrDefault(x=>x.Key=="Banner1").ImageUrl" alt="">
                            </a>
                        </div>
                        <div class="li-banner mt-15 mt-md-30 mt-xs-25 mb-xs-5">
                            <a asp-action="shop" asp-controller="home">
                            <img src="~/uploads/banner/@banners.FirstOrDefault(x=>x.Key=="Banner2").ImageUrl" alt="">
                            </a>
                        </div>
                    </div>
         
                    <!-- Li Banner Area End Here -->
                </div>
            </div>
        </div>
        <!-- Slider With Banner Area End Here -->
        <!-- Begin Static Top Area -->
        <div class="static-top-wrap">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="static-top-content mt-sm-30">
                            Gift Special: Gift every single day on Weekends - New Coupon code "
                            <span>LimupaSaleoff</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Static Top Area End Here -->
        <!-- product-area start -->
        <div class="product-area pt-55 pb-25 pt-xs-50">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="li-product-tab">
                            <ul class="nav li-product-menu">
                                <li><a data-toggle="tab" href="#li-featured-product"><span>Featured Products</span></a></li>
                            </ul>
                        </div>
                        <!-- Begin Li's Tab Menu Content Area -->
                    </div>
                </div>
                <div class="tab-content">
                    <div id="li-new-product" class="tab-pane active show" role="tabpanel">
                        <div class="row">
                            <div class="product-active owl-carousel">
                                    <!-- single-product-wrap start -->
                                    @foreach (Product product in Model.Products)
                                {
                                    <div class="single-product-wrap">
                                        <div class="product-image">
                                            <a href="single-product.html">
                                                <img src="~/uploads/product/@product.ImageUrl" alt="Li's Product Image">
                                            </a>
                                        </div>
                                        <div class="product_desc">
                                            <div class="product_desc_info">
                                                <div class="product-review">
                                                    <h5 class="manufacturer">
                                                    </h5>
                                                    <div class="rating-box">
                                                    </div>
                                                </div>
                                                <h4><a class="product_name" asp-action="shop" asp-controller="home">@product.Name</a></h4>
                                                <div class="price-box">
                                                    @if (product.Discount>0)
                                                {
                                                <span class="new-price new-price-2">$@(product.Price - (product.Price * product.Discount) / 100)</span>
                                                <span class="old-price">$@product.Price</span>
                                                }
                                                else
                                                {
                                                <span class="new-price new-price-2">$@product.Price</span>
                                                }
                                            </div>
                                            </div>
                                            <div class="add-actions">
                                                <ul class="add-actions-link">
                                            <li class="add-cart active"><a class="add-to-basket" asp-action="AddToBasket" asp-route-productId="@product.Id" asp-controller="product">Add to cart</a></li>
                                            <li><a class="quick-view Open-Modal" data-toggle="modal" data-target="#exampleModalCenter" data-id="@product.Id" ><i class="fa fa-eye"></i></a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                }
                                    <!-- single-product-wrap end -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- product-area end -->
        <!-- Begin Li's Static Banner Area -->
        <div class="li-static-banner li-static-banner-4 text-center pt-20">
            <div class="container">
                <div class="row">
         
                    <!-- Single Banner Area End Here -->
                </div>
            </div>
        </div>
        <!-- Li's Static Banner Area End Here -->
        <!-- Begin Li's Static Home Area -->
        <div class="li-static-home">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <!-- Begin Li's Static Home Image Area -->
                        <div class="li-static-home-image"></div>
                        <!-- Li's Static Home Image Area End Here -->
                        <!-- Begin Li's Static Home Content Area -->
                 @foreach (BigBanner bigBanner in Model.BigBanners)
                {
                           <div class="li-static-home-content">
                            <p><span>@bigBanner.Description</span></p>
                            <h2>@bigBanner.Title1</h2>
                            <h2>@bigBanner.Title2</h2>
                            <p class="schedule">
                                Starting at
                            <span> $@bigBanner.Price</span>
                            </p>
                            <div class="default-btn">
                                <a asp-action="shop" asp-controller="home" class="links">Shopping Now</a>
                            </div>
                        </div>
                }
                        <!-- Li's Static Home Content Area End Here -->
                    </div>
                </div>
            </div>
        </div>
        <!-- Li's Static Home Area End Here -->
        <!-- Begin Group Featured Product Area -->
        <div class="group-featured-product pt-60 pb-40 pb-xs-25">
            <div class="container">
                <div class="row">
                </div>
            </div>
        </div>
        <!-- Group Featured Product Area End Here -->