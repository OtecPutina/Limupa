@using Limupa.ViewModel
@model HomeViewModel
@{
    int count = 0;
}
<div>
    <div class="container">
        <div style="display:flex">
            <h1>Blog</h1>
            <div>
                <a type="submit" asp-action="create" asp-controller="blog" class="btn btn-primary">Create Blog</a>
            </div>
        </div>
    </div>
    <div>
        <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Image</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
                @foreach (Blog item in Model.Blogs)
                {
                    count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.Title</td>
                                <td>
                                    <div style="width:200px">
                                        <img style="width:100%" src="~/uploads/blog/@item.ImageUrl">
                                    </div>
                                </td>
                                <td><a type="submit" asp-action="update" asp-controller="blog" class="btn btn-primary" asp-route-id="@item.Id">Update</a></td>
                                <td><a type="submit" asp-action="delete" asp-controller="blog" class="btn btn-danger" asp-route-id="@item.Id">Delete</a></td>
                            </tr>
                }
  </tbody>
</table>
    </div>
</div>