@using Limupa.ViewModel
@model HomeViewModel
@{
    int count = 0;
}
<div>
    <div class="container">
        <div style="display:flex">
            <h1>Big Banner</h1>
            <div>
                <a type="submit" asp-action="create" asp-controller="bigbanner" class="btn btn-primary">Create BigBanner</a>
            </div>
        </div>
    </div>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Image</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Title1</th>
                    <th scope="col">Title2</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (BigBanner item in Model.BigBanners)
                {
                    count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>
                                <div style="width:200px">
                                    <img style="width:100%" src="~/uploads/bigbanner/@item.ImageUrl">
                                </div>
                            </td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>@item.Title1</td>
                    <td>@item.Title2</td>
                            <td><a type="submit" asp-action="update" asp-controller="bigbanner" class="btn btn-primary" asp-route-id="@item.Id">Update</a></td>
                            <td><a type="submit" asp-action="delete" asp-controller="bigbanner" class="btn btn-danger" asp-route-id="@item.Id">Delete</a></td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>