@using Limupa.ViewModel
@model HomeViewModel
@{
    int count = 0;
}
<div>
    <div class="container">
        <div style="display:flex">
            <h1>Banner</h1>
            <div>
            </div>  
        </div>
    </div>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Banner item in Model.Banners)
                {
                    count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@item.Key</td>
                        <td>
                            <div style="width:200px">
                                <img style="width:100%" src="~/uploads/banner/@item.ImageUrl">
                            </div>
                        </td>
                        <td><a type="submit" asp-action="update" asp-controller="banner" class="btn btn-primary" asp-route-id="@item.Id">Update</a></td>
                        <td><a type="submit" asp-action="delete" asp-controller="banner" class="btn btn-danger" asp-route-id="@item.Id">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>