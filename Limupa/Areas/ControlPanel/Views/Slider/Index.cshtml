@using Limupa.ViewModel
@model HomeViewModel
@{
    int count = 0;
}
<div>
    <div class="container">
        <div style="display:flex">
            <h1>Slider</h1>
            <div>
                <a type="submit" asp-action="create" asp-controller="slider" class="btn btn-primary">Create Slider</a>
            </div>
        </div>
    </div>
    <div>
        <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
                @foreach (Slider item in Model.Sliders)
                {
                    count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Price</td>
                            <td>
                                <div style="width:200px">
                                    <img style="width:100%" src="~/uploads/sliders/@item.ImageUrl">
                                </div>
                            </td>
                            <td><a type="submit" asp-action="update" asp-controller="slider" class="btn btn-primary" asp-route-id="@item.Id">Update</a></td>
                            <td><a type="submit" asp-action="delete" asp-controller="slider" class="btn btn-danger" asp-route-id="@item.Id">Delete</a></td>
                        </tr>
                }
  </tbody>
</table>
    </div>
</div>