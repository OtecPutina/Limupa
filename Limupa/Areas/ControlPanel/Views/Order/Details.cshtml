@model Order
@{
    int count = 0;
}
@section css{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
}
<div class="container">
    <h1>Details</h1>
<div class="card" style="max-width:100vw;">
  <div class="card-body" style="max-width:100vw">
        <p>OrderId : @Model.Id</p>
        <p>Member name : @Model.Fullname</p>
        <p>Email : @Model.Email</p>
        <p>Country : @Model.Country</p>
        <p>City : @Model.City</p>
        <p>Adress : @Model.Adress</p>
        <p>ZipCode : @Model.ZipCode</p>
        <p>Phone : @Model.Phone</p>
        <p>Note : @Model.Note</p>
        <p>Total Price : @Model.TotalPrice USD</p>
            <p>Order Status : 
                <span style="font-size:15px;padding:9px 16px;" class="badge text-bg-@(Model.OrderStatus==
                        Limupa.Enums.OrderStatus.Pending?"secondary":(Model.OrderStatus==
                        Limupa.Enums.OrderStatus.Accepted?"success":
                        "danger"))">@Model.OrderStatus</span>
            </p>
  </div>
  <ul class="list-group list-group-flush">
    @foreach (var oi in Model.OrderItems)
            {
                count++;
                <li class="list-group-item">@count -  @oi.ProductName @oi.Count X @(oi.SalePrice-(oi.SalePrice*oi.DiscountPercent)/100) USD</li>
            }
  </ul>
  <div class="card-body">
    <a asp-action="accept" asp-controller="order" asp-route-id="@Model.Id" class="btn btn-success">Accept</a>
    <a asp-action="reject" asp-controller="order" asp-route-id="@Model.Id" class="btn btn-danger">Reject</a>
  </div>
</div>
</div>